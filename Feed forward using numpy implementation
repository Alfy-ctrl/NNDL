import numpy as np

def sigmoid(x):
    return 1 / (1 + np.exp(-x))
x = np.array([0.5, 0.2, 0.1])

W = np.array([
    [0.1, 0.3],
    [0.6, 0.8],
    [0.6, 0.3]
])
b1 = np.array([0.01, 0.02])
z1 = np.dot(x, W) + b1
h = sigmoid(z1)

print("Hidden layer output:", h)
b2 = 0.01
z2 = np.sum(h) + b2
y_pred = sigmoid(z2)

print("Predicted output:", y_pred)

y = 1
loss = -(y * np.log(y_pred) + (1 - y) * np.log(1 - y_pred))

print("Loss:", loss)
